<UserControl
    x:Class="ImageCategorizationHelper.ucCategory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageCategorizationHelper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UC"
    d:DesignHeight="30"
    d:DesignWidth="90"
    mc:Ignorable="d"
    IsTabStop="True">
    <Border x:Name="border" BorderThickness="1" BorderBrush="LightGray" Margin="5">
        <Grid
            x:Name="layoutRoot"
            MouseLeftButtonDown="layoutRoot_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition MinWidth="40"/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="LightGray" BorderThickness="1">
            <TextBlock
                x:Name="tbKey"
                />
            </Border>
            <Border BorderBrush="LightGray" BorderThickness="1" Grid.Column="1">
                <TextBlock
                x:Name="tbCategory"
                />
            </Border>
        </Grid>
    </Border>
</UserControl>
