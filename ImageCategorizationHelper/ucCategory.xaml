<UserControl
    x:Class="ImageCategorizationHelper.ucCategory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageCategorizationHelper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="20"
    d:DesignWidth="80"
    mc:Ignorable="d" x:Name="UC">
    <Grid x:Name="layoutRoot" MouseLeftButtonDown="layoutRoot_MouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbKey" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" MaxLength="1"/>
        <TextBox x:Name="tbCategory" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False"/>
    </Grid>
</UserControl>
